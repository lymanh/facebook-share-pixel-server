{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": true,
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
